# Terraform variables for AKS infrastructure
# This file contains the actual values for your deployment
# Copy this file to terraform.tfvars and update with your values

# Basic Configuration
location = "southeastasia"
resource_group = "rg-aks-demo"

# Network Configuration
vnet_name = "aks-vnet"
vnet_cidr = "10.0.0.0/16"

# AKS Configuration
aks_name = "demoaks"
dns_prefix = "demoaks"

# Azure Container Registry
# Note: ACR names must be globally unique
acr_name = "demoacr1234567890"

# Key Vault
# Note: Key Vault names must be globally unique
kv_name = "demokv1234567890"

